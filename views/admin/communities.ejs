<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Ferma Tech</title>
    <link rel="stylesheet" href="/css/styles.css">
    <style>
        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 24px;
        }
        .page-header h1 {
            margin: 0;
            font-size: 1.5rem;
        }
        .section-card {
            background: #fff;
            border-radius: var(--radius);
            padding: 24px;
            box-shadow: var(--shadow);
            margin-bottom: 24px;
        }
        .data-table {
            width: 100%;
            border-collapse: collapse;
        }
        .data-table th,
        .data-table td {
            padding: 12px 16px;
            text-align: left;
            border-bottom: 1px solid #e5eef0;
        }
        .data-table th {
            background: #f8fafb;
            font-weight: 600;
            font-size: 0.85rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            color: #6c757d;
        }
        .data-table tbody tr:hover {
            background: #f8fafb;
        }
        .badge {
            display: inline-block;
            padding: 4px 10px;
            border-radius: 999px;
            font-size: 0.75rem;
            font-weight: 600;
        }
        .badge-active {
            background: #dcfce7;
            color: #166534;
        }
        .badge-inactive {
            background: #fee2e2;
            color: #991b1b;
        }
        .btn-sm {
            padding: 6px 12px;
            font-size: 0.85rem;
        }
        .alert {
            padding: 14px 16px;
            border-radius: 12px;
            margin-bottom: 20px;
            font-size: 0.9rem;
        }
        .alert-success {
            background: #dcfce7;
            color: #166534;
            border: 1px solid #bbf7d0;
        }
        .btn-group {
            display: flex;
            gap: 8px;
        }
    </style>
</head>
<body>
    <%- include('../partials/header') %>

    <nav class="sidebar" id="sidebar">
        <div class="brand" style="display: flex; align-items: center;">
            <button class="close-sidebar" aria-label="Close navigation" style="background: transparent; border: none; cursor: pointer; margin-right: 10px; position: relative;">
                <span style="display: block; width: 20px; height: 2px; background: black; transform: rotate(45deg); position: absolute; top: 50%; left: 50%; transform-origin: center; margin: -1px 0 0 -10px;"></span>
                <span style="display: block; width: 20px; height: 2px; background: black; transform: rotate(-45deg); position: absolute; top: 50%; left: 50%; transform-origin: center; margin: -1px 0 0 -10px;"></span>
            </button>
            <img src="/images/icons/logo.png" alt="Ferma Tech Logo">
            <h1>Ferma Tech</h1>
        </div>
        <ul class="nav">
            <li><a href="/">Dashboard</a></li>
            <li><a href="/admin">Super Admin</a></li>
            <li><a href="/admin/communities" class="active">Communities</a></li>
            <li><a href="/admin/users">Users</a></li>
            <li><a href="/settings">Settings</a></li>
        </ul>
        <footer>
            <span class="tag">
                <span class="dot"></span> <%= user.firstName %> (SuperAdmin)
            </span>
        </footer>
    </nav>

    <main class="content">
        <div class="page-header">
            <h1>Manage Communities</h1>
            <a href="/admin/communities/create" class="btn primary">+ Create Community</a>
        </div>

        <% if (typeof success !== 'undefined' || (typeof query !== 'undefined' && query.success)) { %>
            <div class="alert alert-success">
                <%= typeof success !== 'undefined' ? success : 'Operation completed successfully' %>
            </div>
        <% } %>

        <div class="section-card">
            <table class="data-table">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Slug</th>
                        <th>Owner</th>
                        <th>Members</th>
                        <th>Status</th>
                        <th>Created</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (communities.length === 0) { %>
                        <tr>
                            <td colspan="7" style="text-align: center; color: #6c757d; padding: 40px;">
                                No communities found. <a href="/admin/communities/create">Create one now</a>
                            </td>
                        </tr>
                    <% } else { %>
                        <% communities.forEach(function(c) { %>
                            <tr>
                                <td><strong><%= c.name %></strong></td>
                                <td><code><%= c.slug %></code></td>
                                <td><%= c.owner ? c.owner.firstName + ' ' + c.owner.lastName : 'N/A' %></td>
                                <td><%= c.memberCount %></td>
                                <td>
                                    <span class="badge <%= c.isActive ? 'badge-active' : 'badge-inactive' %>">
                                        <%= c.isActive ? 'Active' : 'Inactive' %>
                                    </span>
                                </td>
                                <td><%= new Date(c.createdAt).toLocaleDateString() %></td>
                                <td>
                                    <div class="btn-group">
                                        <a href="/admin/communities/<%= c._id %>" class="btn muted btn-sm">View</a>
                                        <a href="/admin/communities/<%= c._id %>/edit" class="btn primary btn-sm">Edit</a>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                    <% } %>
                </tbody>
            </table>
        </div>
    </main>

    <%- include('../partials/footer') %>

    <script>
        document.querySelector('.hamburger').addEventListener('click', function() {
            document.getElementById('sidebar').classList.add('open');
        });
        document.querySelector('.close-sidebar').addEventListener('click', function() {
            document.getElementById('sidebar').classList.remove('open');
        });
    </script>
</body>
</html>
